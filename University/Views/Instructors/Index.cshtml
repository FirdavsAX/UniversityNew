@using University.Models.InstructorViewModels;
@model IEnumerable<InstructorDisplayViewModel>;
@{
    ViewData["Title"] = "Instructors";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4 text-center mt-5 mb-4">Instructors</h1>
        </div>
    </div>
</div>

<form asp-action="Index" method="get">
    <div class="row"> 
        <div class="col-md-6">
            <input type="text" name="SearchString" placeholder="Search..." class="form-control" value="@ViewBag.SearchedString" />
        </div>
        <div class="col-md-4">
            <select name="departmentId" asp-items="@ViewBag.Departments" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-info" value="Search" />
        </div>
    </div>
</form>

<div class="container">
    <div class="row justify-content-end">
        <div class="col-auto">
            <p>
                <a asp-action="Create" class="btn btn-success">Create</a>
            </p>
        </div>
    </div>
</div>

<div class="shadow p-3 mb-5 bg-white rounded">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]" >
                    @Html.DisplayNameFor(model => model.FullName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSort"]">
                    @Html.DisplayNameFor(model => model.Email)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DepartmentSort"]" >
                    @Html.DisplayNameFor(model => model.Department)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach(var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItme => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>