@using University.Models.CourseViewModel
@model CourseDisplayViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <!-- Display the image -->
        <div class="mb-4">
            @if (Model.Image != null)
            {
                <img width="400px" src="data:image/jpeg;base64,@{
                    using (var ms = new MemoryStream())
                    {
                        Model.Image.CopyTo(ms);
                        byte[] imageData = ms.ToArray();
                        string base64String = Convert.ToBase64String(imageData);
                            @base64String
                    }
                }" class="img-fluid" alt="Image" />
            }
            else
            {
                <p class="text-muted">No image available</p>
            }
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Course Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
                    <dt class="col-sm-4">Hours:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Hours)</dd>
                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
