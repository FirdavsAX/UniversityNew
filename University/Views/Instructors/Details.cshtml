@using University.Models.InstructorViewModels;
@model InstructorDisplayViewModel;

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-5">Details</h1>
    <hr />
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Instructor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Full Name</dt>
                <dd class="col-sm-10">@Model.FullName</dd>
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>
                <dt class="col-sm-2">Department</dt>
                <dd class="col-sm-10">@Model.Department</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
